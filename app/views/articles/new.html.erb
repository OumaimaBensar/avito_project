<h1 style="margin-left:200px">Create a new article</h1>
<% if @article.errors.any?%>
  <h3>there's some errors</h3>
  <ul>
      <% @article.errors.full_messages.each do |err|%>
      <li><%= err %></li>
      <%end%>
  </ul>
<%end%>


<%= form_with scope: :article , id: "form_A", url: articles_path ,local: true do |form| %>
  <div class="form-group-A" style="">
    <%= form.label :article_type %>
    <%= form.text_field :article_type, class: "form-control-A" %>
  </div>

  <div class="form-group-A">
    <%= form.label :title %>
    <%= form.text_field :title, class: "form-control-A" %>
  </div>

  <div class="form-group-A">
    <%= form.label :description %>
    <%= form.text_area :description, class: "form-control-A" %>
  </div>

  <div class="form-group-A">
    <%= form.label :image_url %>
    <%= form.text_area :image_url, class: "form-control-A" %>
  </div>

  <div class="form-group-A">
    <%= form.label :price %>
    <%= form.text_field :price, class: "form-control-A" %>
  </div>

  <div class="form-group-A">
    <%= form.label :etat %>
    <%= form.number_field :etat, class: "form-control-A" %>
  </div>

  <div class="form-group-A">
    <%= form.label :annee_modele %>
    <%= form.number_field :annee_modele, class: "form-control-A" %>
  </div>

  <div class="form-group-A">
    <%= form.label :orgine %>
    <%= form.text_area :orgine, class: "form-control-A" %>
  </div>

  <div class="form-group-A">
    <%= form.label :premiere_main %>
    <%= form.check_box :premiere_main, class: "form-check-input" %>
  </div>

  <div class="form-group-A">
    <%= form.label :marque %>
    <%= form.text_field :marque, class: "form-control-A" %>
  </div>

  <div class="form-group-A">
    <%= form.label :nombre_portes %>
    <%= form.number_field :nombre_portes, class: "form-control-A" %>
  </div>

  <div class="form-group-A">
    <%= form.label :modele %>
    <%= form.number_field :modele, class: "form-control-A" %>
  </div>

  <div class="form-group-A">
    <%= form.label :kilometrage %>
    <%= form.number_field :kilometrage, class: "form-control-A" %>
  </div>

  <div class="form-group-A">
    <%= form.label :ville %>
    <%= form.text_field :ville, class: "form-control-A" %>
  </div>

  <%= form.submit%>
<%end%>

